<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff0efef"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip" >

        <TextView
            android:id="@+id/pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1小时前"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/del_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/user_detail_record_del_icon_selector" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/marks_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/center_bg_notation"
        android:orientation="horizontal"
        android:paddingBottom="8.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <TextView
            android:id="@+id/comment_item_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="is"
            android:textColor="#000"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/love_imagebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:src="@drawable/list_icon_gif_nor_icon_heart_nor" />

            <TextView
                android:id="@+id/love_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:text="2000+" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/original"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.0dip"
        android:drawableRight="@drawable/notationdetails_icn_more"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="asdfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        android:textColor="#ff666666"
        android:textSize="14sp" />

</LinearLayout>