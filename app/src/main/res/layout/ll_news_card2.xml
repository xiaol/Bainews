<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemroot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_feedstream_list_table">

        <LinearLayout
            android:id="@+id/ll_time_item"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:background="#dfe6e9"
            android:layout_height="45dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/image_compass" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四月二十三日"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期三|早间"
                    android:textSize="13sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8cfd2"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_divider"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_time_item"
            android:background="#dfe6e9"
            android:layout_height="8dp" />

        <LinearLayout
            android:id="@+id/ll_image_list"
            android:layout_below="@id/rl_divider"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_card1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:background="@drawable/fenghuangwang" />

            <ImageView
                android:id="@+id/image_card2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:background="@drawable/zhengquanzhixing" />

        </LinearLayout>

        <com.news.yazhidao.widget.LetterSpacingTextView
            android:id="@+id/tv_news_category"
            android:layout_below="@+id/ll_image_list"
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_category_shehui" />

        <com.news.yazhidao.widget.LetterSpacingTextView
            android:id="@+id/tv_title"
            android:layout_below="@+id/ll_image_list"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/tv_news_category"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:text="反馈文理分科我离开我吕蒙WMV物品"
            android:textSize="16sp"
            android:textColor="#7d7d7d" />

        <LinearLayout
            android:id="@+id/ll_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_title"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:background="#dadada" />

            <com.news.yazhidao.widget.CircleView
                android:id="@+id/cv_opinions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="2dp"
                android:paddingTop="5dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_source_content"
            android:layout_below="@+id/ll_view_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp" />

        <LinearLayout
            android:id="@+id/ll_source_interest"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:layout_below="@+id/ll_source_content"
            android:background="@drawable/bg_feedback_contact_way2"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/tv_interests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#ff0000" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_mark"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="70dp"
            android:layout_below="@+id/ll_source_interest"
            android:visibility="gone"
            android:background="#2f393d">

            <TextView
                android:id="@+id/tv_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续阅读"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/tv_continue"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/top_arrow" />

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/ad_item" />
</LinearLayout>