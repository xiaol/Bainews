<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemroot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_feedstream_list_table">

        <include
            android:id="@+id/ll_time_item"
            layout="@layout/ll_time_layout" />

        <RelativeLayout
            android:id="@+id/rl_divider"
            android:layout_below="@+id/ll_time_item"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#dfe6e9" />

        <RelativeLayout
            android:id="@+id/rl_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_divider">

            <ImageView
                android:id="@+id/iv_title_img"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/image_back" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_toRightOf="@+id/iv_title_img"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="8dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="#7d7d7d" />

            <com.news.yazhidao.widget.LetterSpacingTextView
                android:id="@+id/tv_news_category"
                android:layout_width="36dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:textColor="#ffffff"
                android:background="@drawable/bg_category_shehui" />

            <LinearLayout
                android:id="@+id/ll_source_interest"
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_feedback_contact_way2"
                android:layout_below="@+id/tv_title"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <com.news.yazhidao.widget.TextViewExtend
                    android:id="@+id/tv_interests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10个看点"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_right_white" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_source_content"
            android:layout_below="@+id/rl_title_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp" />

        <RelativeLayout
            android:id="@+id/rl_bottom_mark"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="70dp"
            android:layout_below="@+id/ll_source_content"
            android:visibility="gone"
            android:background="#2f393d">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续阅读"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/top_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#dfe6e9"
            android:layout_below="@+id/rl_bottom_mark" />


    </RelativeLayout>

    <include layout="@layout/ad_item" />
</LinearLayout>