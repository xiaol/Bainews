<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/new_color9"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/common_header_bg"
        >

        <TextView
            android:id="@+id/mLoginCancel"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/font2"
            android:paddingLeft="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/new_color7"
            android:textSize="@dimen/font1"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/new_color5"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/mLoginWeixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/btn_weixin_login"
            android:gravity="center"
            android:text="微信快速登录"
            android:textColor="@color/new_color3"
            android:textSize="@dimen/font3"
            />

        <TextView
            android:id="@+id/mLoginWeibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/btn_weibo_login"
            android:gravity="center"
            android:text="微博快速登录"
            android:textColor="@color/new_color3"
            android:textSize="@dimen/font3"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/mLoginSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/btn_setting"
        android:padding="12dp"
        android:text="设置"
        android:textColor="@color/new_color1"
        android:textSize="@dimen/font3"
        />
</RelativeLayout>