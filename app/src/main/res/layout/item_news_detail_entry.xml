<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mDetailEntryWrapper"
                android:background="@drawable/bg_item_news_detail_content_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/detail_padding_left"
                android:paddingRight="@dimen/detail_padding_right"
                android:paddingTop="8dp"
    >
        <ImageView
            android:id="@+id/mDetailEntryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_news_detail_entry_baike"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/mDetailEntryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mNewsDetailHeaderDesc"
            android:layout_toRightOf="@id/mDetailEntryIcon"
            android:layout_marginLeft="16dp"
            android:textColor="@color/news_detail_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/detail_entry_title"
            android:layout_centerVertical="true"
            />

        <View
            android:id="@+id/mDetailEntryDivider"
            android:layout_below="@id/mDetailEntryIcon"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/news_detail_speech_divider"
            android:layout_marginTop="8dp"
            />
</RelativeLayout>