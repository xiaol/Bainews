<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/souce_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_source"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/img_blue_point" />

    <ImageView
        android:id="@+id/iv_combine_line_top"
        android:layout_width="1dp"
        android:layout_height="13dp"
        android:layout_marginLeft="29dp"
        android:background="@color/blue" />

    <ImageView
        android:id="@+id/iv_combine_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_source"
        android:layout_marginLeft="29dp"
        android:background="@color/blue" />

    <TextView
        android:id="@+id/tv_relate"
        android:layout_width="58dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_sulist"
        android:gravity="center"
        android:paddingTop="-1dp"
        android:text="99%相关"
        android:textColor="#ffb5b5b5"
        android:textSize="11sp" />

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/tv_news_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/tv_relate"
        android:layout_toRightOf="@+id/iv_source"
        android:ellipsize="end"
        android:gravity="left"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:paddingBottom="10dp"
        android:text="Fay苏"
        android:textColor="#ff888888"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_devider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_news_source"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_half_line" />
</RelativeLayout>