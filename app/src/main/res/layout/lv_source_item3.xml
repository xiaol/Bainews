<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/souce_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_source"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="28dp"
        android:background="@drawable/img_blue_point" />

    <ImageView
        android:id="@+id/iv_combine_line_top"
        android:layout_width="1dp"
        android:layout_height="13dp"
        android:layout_marginLeft="31dp"
        android:background="@color/blue" />

    <ImageView
        android:id="@+id/iv_combine_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_source"
        android:layout_marginLeft="31dp"
        android:background="@color/blue" />

    <TextView
        android:id="@+id/tv_relate"
        android:layout_width="28dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_sulist"
        android:gravity="center"
        android:textColor="#ffb5b5b5"
        android:textSize="@dimen/font6" />

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/tv_news_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="5dp"
        android:layout_toLeftOf="@+id/tv_relate"
        android:layout_toRightOf="@+id/iv_source"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:textColor="@color/color4"
        android:textSize="@dimen/font5" />

</RelativeLayout>