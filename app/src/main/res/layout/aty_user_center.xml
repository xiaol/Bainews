<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/new_color9"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/common_header_bg"
        >

        <TextView
            android:id="@+id/mCenterCancel"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:paddingLeft="2dp"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/new_font2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我"
            android:textColor="@color/new_color7"
            android:textSize="@dimen/font1"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/new_color5"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mCenterUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="98dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/mCenterUserIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
            <!--fresco:placeholderImage="@drawable/ic_user_comment_default"-->
            <!--fresco:roundAsCircle="true"-->
            <!--fresco:roundingBorderColor="@color/white"-->
            <!--fresco:roundingBorderWidth="5dp"-->
            <!--/>-->

        <TextView
            android:id="@+id/mCenterUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/new_font2"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mCenterComment"
        android:layout_below="@id/mCenterUserInfo"
        android:layout_marginTop="59dp"
        android:layout_width="match_parent"
        android:layout_height="48.56dp"
        android:background="@color/new_color12"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:background="@color/new_color5"
            />
        <ImageView
            android:id="@+id/mCenterCommentIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_comment"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:paddingTop="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mCenterCommentIcon"
            android:textSize="@dimen/font2"
            android:textColor="@color/new_color1"
            android:text="我的评论"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mCenterFavorite"
        android:layout_below="@id/mCenterComment"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/new_color12"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/news_list_table_devider"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            />
        <ImageView
            android:id="@+id/mCenterFavoriteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_favorite"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mCenterFavoriteIcon"
            android:textSize="@dimen/font2"
            android:textColor="@color/new_color1"
            android:text="我的收藏"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mCenterMessage"
        android:layout_below="@id/mCenterFavorite"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/new_color12"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/news_list_table_devider"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            />
        <ImageView
            android:id="@+id/mCenterMessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mCenterMessageIcon"
            android:textSize="@dimen/font2"
            android:drawablePadding="12dp"
            android:textColor="@color/new_color1"
            android:text="我的消息"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            />
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.56dp"-->
            <!--android:background="@color/new_color5"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--/>-->
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mCenterOfferWall"
        android:layout_below="@id/mCenterMessage"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/new_color12"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/news_list_table_devider"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            />
        <ImageView
            android:id="@+id/mCenterOfferWallIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_offerwall"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mCenterOfferWallIcon"
            android:textSize="@dimen/font2"
            android:drawablePadding="12dp"
            android:textColor="@color/new_color1"
            android:text="应用推荐"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_center_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.56dp"
            android:background="@color/new_color5"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="86dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        >
        <TextView
            android:id="@+id/mCenterDigger"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/font3"
            android:drawableTop="@drawable/ic_user_center_digger"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="一订"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/mCenterSetting"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/new_color1"
            android:textSize="@dimen/font3"
            android:drawableTop="@drawable/btn_setting"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:gravity="center"
            android:text="设置"
            />
    </LinearLayout>
</RelativeLayout>