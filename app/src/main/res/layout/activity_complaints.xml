<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.news.yazhidao.pages.ComplaintsActivity"
    android:orientation="vertical"
    android:background="@color/staggered_item_source">
    <RelativeLayout
        android:id="@+id/Complaints_Header"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/Complaints_LeftBack"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/btn_left_back"
            android:background="@drawable/bg_left_back_selector"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font2"
            android:text="投诉"
            android:textColor="@color/color9"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_color5" />
    <ListView
        android:id="@+id/Complaints_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
