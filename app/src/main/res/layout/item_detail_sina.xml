<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.news.yazhidao.widget.RoundedImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_sina" />

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_head_portrait"
        android:maxLength="10"
        android:text="aaaaaaaaaaaaaa"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_toLeftOf="@+id/iv_picture"
        android:paddingBottom="15dp"
        android:text="阿拉拉拉拉拉阿拉拉拉拉拉阿拉拉拉拉拉阿拉拉拉拉拉阿拉拉拉拉拉"
        android:textColor="@color/DarkGray"
        android:textSize="14sp" />


</RelativeLayout>