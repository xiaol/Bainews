<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mFavoriteItemLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="6dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/myfavorite_img_View"
            android:layout_width="85dp"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            custom:actualImageScaleType="centerCrop"
            custom:placeholderImageScaleType="centerCrop"
            custom:roundBottomLeft="false"
            custom:roundBottomRight="false"
            custom:roundTopLeft="false"
            custom:roundTopRight="false"
            custom:roundedCornerRadius="2dp"
            custom:roundingBorderWidth="1px"
            />
        <LinearLayout
            android:id="@+id/myfavorite_contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/myfavorite_img_View"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="8dp">
            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/myfavorite_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/new_color1"
                android:textSize="@dimen/new_font10"
                android:includeFontPadding="false"
                />

            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/myfavorite_Source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/new_color3"
                android:textSize="@dimen/new_font6"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="1dp"
                />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/myfavorite_bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/new_color4"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>


</LinearLayout>