<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="213dp"
              android:background="@drawable/bg_special_list_item_default"
              android:gravity="center"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/mSpecialTitleContainer"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/mSpecialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="4dp"
            android:layout_below="@id/mSpecialTitle"
            android:background="@color/white"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/mSpecialCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="35sp"
        />

    <TextView
        android:id="@+id/mSpecialDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:lines="2"
        android:ellipsize="end"
        android:text="这是一个神奇的网站,这是一个神奇的网站,这是一个神奇的网站,这是一个神奇的网站,"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

</LinearLayout>