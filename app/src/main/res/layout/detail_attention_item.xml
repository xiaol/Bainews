<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout_attention"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/white"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="25dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_attention_icon"
            android:layout_width="67dp"
            android:layout_height="67dp"
            app:failureImage="@drawable/ic_user_comment_default"
            app:placeholderImage="@drawable/ic_user_comment_default"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/bg_home_login_header"
            app:roundingBorderWidth="2px"/>


        <LinearLayout
            android:id="@+id/layout_attention_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/image_attention_line"
                android:layout_width="1dp"
                android:layout_height="47dp"
                android:background="@color/attention_line"
                android:layout_marginLeft="25dp"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/image_attention_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/attention_success"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/linearlayout_attention"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:visibility="visible"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attention_add"/>
                <com.news.yazhidao.widget.TextViewExtend
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="6dp"
                    android:text="关注"
                    android:lines="1"
                    android:textColor="@color/attention_text"
                    android:textSize="@dimen/font5"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_attention_icon"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layout_attention_linear"
            >
            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/tv_attention_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="音乐风云"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/new_font2"/>
            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/tv_attention_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginTop="11dp"
                android:text="音乐风云发布最新明星在北京做演唱会"
                android:lines="1"
                android:textColor="@color/new_color3"
                android:textSize="@dimen/new_font3"
                />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>