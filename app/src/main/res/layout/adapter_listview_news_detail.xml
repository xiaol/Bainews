<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray">

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/DarkGray"
        android:gravity="center"
        android:padding="3dp"
        android:background="@drawable/white_relate_onepx_solid"
        android:text="08/14"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp" />


    <RelativeLayout
        android:id="@+id/line_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/time_textView">

        <ImageView
            android:id="@+id/rounded_imageView"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/white_relate_onedp_solid"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/top_line_imageView"
            android:layout_above="@+id/rounded_imageView"
            android:layerType="software"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginBottom="-22dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vertical_dashed_line" />

        <ImageView
            android:layout_below="@+id/rounded_imageView"
            android:id="@+id/line_bottom_imageView"
            android:layerType="software"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vertical_dashed_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/line_layout"
        android:background="@drawable/white_relate_onepx_solid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/picture_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true" />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/content_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/picture_imageView"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:gravity="left" />
    </RelativeLayout>

</RelativeLayout>