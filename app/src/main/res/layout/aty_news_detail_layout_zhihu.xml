<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:id="@+id/iv_arrow_zhihu"
        android:layout_width="4dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/ic_arrow_hu"
        />

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/content_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/news_detail_item_margin_left"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/iv_arrow_zhihu"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:textSize="15sp" />

</RelativeLayout>