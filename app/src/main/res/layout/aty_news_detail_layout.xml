<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/mDetailWrapper"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_news_detail">

    <RelativeLayout
        android:id="@+id/mDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_home_login_header"
        >

        <ImageView
            android:id="@+id/mDetailLeftBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:contentDescription="转到上一级"
            android:scaleType="centerInside"
            android:src="@drawable/btn_detail_left_back"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            android:background="@color/black"
            />
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/mDetailContentListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mDetailHeader"
        android:layout_above="@+id/mDetailBottomBanner"
        android:cacheColorHint="@android:color/transparent"
        android:clipToPadding="false"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:paddingBottom="10dp"
        />
    <RelativeLayout
        android:id="@+id/mDetailBottomBanner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_home_login_header"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:alpha="0.3"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/mDetailAddComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_add_comment"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mDetailComment"
            android:text="写点什么吧..."
            android:textSize="14sp"
            android:textColor="@color/user_add_comment_color"
            android:padding="8dp"
            android:paddingLeft="16dp"
            android:layout_weight="30"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            />
        <FrameLayout
            android:id="@+id/mDetailComment"
            android:layout_toLeftOf="@+id/mDetailShare"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="评论"
            android:scaleType="centerInside"
            android:src="@drawable/btn_detail_comment"
            />
        <TextView
            android:id="@+id/mDetailCommentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:text="123"
            android:textSize="8sp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:background="@drawable/bg_news_detail_commit_num"
            />
        </FrameLayout>
        <ImageView
            android:id="@+id/mDetailShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:contentDescription="分享"
            android:scaleType="centerInside"
            android:src="@drawable/btn_detail_share"/>
    </RelativeLayout>
    <!--暂时不用-->
    <RelativeLayout
        android:id="@+id/mNewsDetailLoaddingWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/mNewsLoadingImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxHeight="90dp"
            android:maxWidth="90dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_news_detail_reload"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/bgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ProgressBar
                android:id="@+id/image"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/load_progress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_centerHorizontal="true"
                android:text="正在努力加载..."
                android:textColor="#ffb2b2b2"
                android:textSize="@dimen/font5" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/share_bg_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="invisible"/>


</RelativeLayout>