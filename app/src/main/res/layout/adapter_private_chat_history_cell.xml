<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.news.yazhidao.widget.RoundedImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:border_width="1dp"
        app:border_color="@color/Gray"
        app:corner_radius="22.5dp"
        android:layout_marginTop="@dimen/common_padding_ten"
        android:layout_marginBottom="@dimen/common_padding_ten"
        android:src="@drawable/icon_t"
        android:id="@+id/history_icon_view"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_padding_ten" />

    <com.news.yazhidao.widget.RoundedImageView
        android:id="@+id/new_count"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@color/red"
        app:border_width="0dp"
        app:border_color="@color/white"
        app:corner_radius="22.5dp"
        android:layout_alignRight="@+id/history_icon_view"
        android:layout_marginTop="7dp"
        android:layout_marginRight="-5dp"/>

    <com.news.yazhidao.widget.TextViewExtend
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/username_view"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="@dimen/common_padding_five"
        android:textColor="@color/black"
        android:maxEms="15"
        android:textSize="@dimen/textsize_fifteen"
        android:lines="1"
        android:singleLine="true"
        android:maxLength="14"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/history_icon_view" />

    <com.news.yazhidao.widget.TextViewExtend
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_history_view"
        android:lines="1"
        android:maxEms="12"
        android:ellipsize="end"
        android:textSize="@dimen/textsize_fourteen"
        android:textColor="@color/Gray"
        android:layout_below="@+id/username_view"
        android:layout_alignLeft="@+id/username_view" />

    <com.news.yazhidao.widget.TextViewExtend
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_view"
        android:textColor="@color/Gray"
        android:textSize="@dimen/textsize_twelve"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_padding_ten"
        android:layout_marginTop="@dimen/common_padding_ten" />

</RelativeLayout>