<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_feedstream_list_table">

    <RelativeLayout
        android:id="@+id/rl_divider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f3f3fa"
        />

    <LinearLayout
        android:id="@+id/ll_image_list"
        android:layout_below="@id/rl_divider"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_card1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/image_card2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/image_card3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            />

        </LinearLayout>

    <com.news.yazhidao.widget.LetterSpacingTextView
        android:id="@+id/tv_title"
        android:layout_below="@+id/ll_image_list"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="反馈文理分科我离开我吕蒙WMV物品"
        android:textSize="20sp"
        android:textColor="#000000"
        />

    <com.news.yazhidao.widget.LetterSpacingTextView
        android:id="@+id/tv_news_category"
        android:layout_below="@+id/ll_image_list"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="2dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_category_shehui"
        />

    <LinearLayout
        android:id="@+id/ll_devider"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="12dp"
        android:background="@drawable/image_half_line"
        />

    <LinearLayout
        android:id="@+id/ll_source_content"
        android:layout_below="@+id/ll_devider"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="3dp"/>

    <LinearLayout
        android:id="@+id/ll_source_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_feedback_contact_way"
        android:layout_below="@+id/ll_source_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <com.news.yazhidao.widget.LetterSpacingTextView
            android:id="@+id/tv_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10个看点"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#4eb4ea"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/jiantou" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_mark"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ll_source_interest"
        android:visibility="gone"
        android:background="#2f393d">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续阅读"
            android:layout_centerInParent="true"
            android:textSize="23sp"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@drawable/top_arrow" />

    </RelativeLayout>

</RelativeLayout>
