<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_seach_hot_label"
    >

    <RelativeLayout
        android:id="@+id/mSearchHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_titlebar_main"
        >

        <ImageView
            android:id="@+id/mSearchLeftBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mDoSearch"
            android:layout_toRightOf="@id/mSearchLeftBack"
            android:background="@drawable/bg_search_topic"
            android:descendantFocusability="afterDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/mSearchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_search_topic"
                />

            <EditText
                android:id="@+id/mSearchContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/mSearchClear"
                android:layout_toRightOf="@id/mSearchIcon"
                android:background="@null"
                android:hint="请输入关键字..."
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="#aa000000"
                android:textColorHint="#aaaaaa"
                android:textCursorDrawable="@drawable/text_cursor_color"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/mSearchClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_search_topic_clear"
                android:visibility="gone"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/mDoSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="搜索"
            android:textColor="@color/do_search_not_do"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/mSearchHotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mSearchHeader"
        android:layout_margin="16dp"
        android:text="热门搜索"
        android:textColor="@color/search_hot_label"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/mDoSearchChangeBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mSearchHeader"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_search_change_batch"
        android:text="换一批"
        android:textColor="@color/do_search_change_batch"
        android:textSize="14sp"
        />

    <com.news.yazhidao.widget.HotLabelsLayout
        android:id="@+id/mHotLabelsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mSearchHotLabel"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

</RelativeLayout>
