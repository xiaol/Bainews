<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ebebeb"
    android:layout_alignParentBottom="true"
    android:id="@+id/gray_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.news.yazhidao.widget.TextViewExtend
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_type_record"
        android:id="@+id/switch_button"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.5dp"
        android:layout_marginLeft="12.5dp" />

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="发送"
        android:textColor="@color/Gray"
        android:gravity="center"
        android:textSize="@dimen/textsize_twenty"
        android:layout_margin="@dimen/common_padding_five" />

    <com.news.yazhidao.widget.TextViewExtend
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/send_button"
        android:layout_toRightOf="@+id/switch_button"
        android:text="按住说话"
        android:id="@+id/record_button"
        android:textColor="#3e3e3e"
        android:background="@drawable/comment_button_bg"
        android:gravity="center"
        android:textSize="@dimen/textsize_fifteen"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/send_button"
        android:layout_toRightOf="@+id/switch_button"
        android:id="@+id/text_field"
        android:lines="1"
        android:singleLine="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="说点什么"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_fifteen"
        android:focusableInTouchMode="true"
        android:background="@drawable/input_view_bg"
        android:textColorHint="@color/LightGray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>




