<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mNewsDetailHeaderWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/mNewsDetailHeaderImg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_news_detail_listview_header" />

    <RelativeLayout
        android:id="@+id/mNewsDetailHeaderContentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:layout_below="@id/mNewsDetailHeaderImg">

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:text="在大多数情况下,这个方法还不赖,并且有一些优点"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNewsDetailHeaderTitle"
            android:layout_marginTop="24dp"
            android:layout_marginRight="22dp"
            android:textColor="@color/news_detail_time_and_temperature"
            android:textSize="10sp"
            android:text="2015年05月25日" />

        <com.news.yazhidao.widget.TextViewExtend
            android:layout_below="@id/mNewsDetailHeaderTitle"
            android:layout_toRightOf="@id/mNewsDetailHeaderTime"
            android:drawableLeft="@drawable/ic_news_detail_temperature"
            android:textColor="@color/news_detail_time_and_temperature"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text="38℃"

            />


        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNewsDetailHeaderTime"
            android:background="@drawable/bg_news_detail_describe"
            android:text="这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描述这里是新闻描"
            android:layout_marginTop="28dp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.3"
            android:textSize="18sp" />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNewsDetailHeaderDesc"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            android:text="这里是新闻内容这里是新闻内容这里是新闻内容这里是新闻内容\n这里是新闻内容这里是新闻内容这里是新闻内容这里是新闻内容这里是新闻内容这里是新闻内容"
            android:textColor="@color/black" />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderSourceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNewsDetailHeaderContent"
            android:layout_marginTop="32dp"
            android:textColor="@color/news_detail_sourcename_and_location"
            android:textSize="14sp"
            android:text="摘至：头家白条" />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mNewsDetailHeaderContent"
            android:textColor="@color/news_detail_sourcename_and_location"
            android:layout_marginTop="32dp"
            android:textSize="14sp"
            android:text="发生地点：新加坡" />
    </RelativeLayout>
</RelativeLayout>