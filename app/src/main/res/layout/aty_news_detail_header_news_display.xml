<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mNewsDetailHeaderWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grag_line_top_bottom"
    >

    <ImageView
        android:id="@+id/mNewsDetailHeaderImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <RelativeLayout
        android:id="@+id/mNewsDetailHeaderContentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@id/mNewsDetailHeaderImg">

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNewsDetailHeaderTitle"
            android:layout_marginTop="24dp"
            android:layout_marginRight="22dp"
            android:textColor="@color/news_detail_time_and_temperature"
            android:textSize="10sp"
             />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderTemperature"
            android:layout_below="@id/mNewsDetailHeaderTitle"
            android:layout_toRightOf="@id/mNewsDetailHeaderTime"
            android:drawableLeft="@drawable/ic_news_detail_temperature"
            android:textColor="@color/news_detail_time_and_temperature"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="10sp"
            android:gravity="center"

            />


        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNewsDetailHeaderTime"
            android:background="@drawable/bg_news_detail_describe"
            android:layout_marginTop="28dp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.3"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/mNewsDetailHeaderContentParent"
            android:layout_below="@id/mNewsDetailHeaderDesc"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderPulldown"
            android:layout_below="@id/mNewsDetailHeaderContentParent"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_news_detail_listview_pulldown"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="-20dp"
            android:layout_marginTop="-8dp"
            android:text="@string/mNewsDetailHeaderOnclickMore"
            />
        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderSourceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNewsDetailHeaderPulldown"
            android:layout_marginTop="32dp"
            android:paddingBottom="32dp"
            android:textColor="@color/news_detail_sourcename_and_location"
            android:textSize="14sp"
             />

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/mNewsDetailHeaderLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mNewsDetailHeaderPulldown"
            android:textColor="@color/news_detail_sourcename_and_location"
            android:layout_marginTop="32dp"
            android:paddingBottom="32dp"
            android:textSize="14sp"
             />
    </RelativeLayout>
</RelativeLayout>