<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/attentionHeadView_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
        android:id="@+id/iv_attention_headView_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"/>
        <!--app:failureImage="@drawable/ic_user_comment_default"-->
        <!--app:placeholderImage="@drawable/ic_user_comment_default"-->
        <!--app:roundAsCircle="true"-->
        <!--app:roundingBorderColor="@color/black"-->
        <!--app:roundingBorderWidth="2px"-->
        <!--android:layout_marginTop="4dp"-->
        <!--/>-->

    <com.news.yazhidao.widget.TextViewExtend
        android:id="@+id/tv_attention_headView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="24dp"
        android:text="住宅产业"
        android:lines="1"
        android:textColor="@color/new_color1"
        android:textSize="@dimen/new_font10"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/new_color4"/>
    </LinearLayout>
</LinearLayout>