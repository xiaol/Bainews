<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_comment_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="14dp"
        android:paddingTop="15dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_user_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:failureImage="@drawable/ic_user_comment_default"
            app:placeholderImage="@drawable/ic_user_comment_default"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/bg_home_login_header"
            app:roundingBorderWidth="2px"/>



        <LinearLayout
            android:id="@+id/mSelectCommentHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_user_icon"
            android:layout_marginLeft="14dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4.5dp">
                <com.news.yazhidao.widget.TextViewExtend
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text="ssfsdfs"
                    android:lines="1"
                    android:textColor="@color/new_color2"
                    android:textSize="@dimen/new_font3"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_alignParentRight="true">
                    <com.news.yazhidao.widget.TextViewExtend
                        android:id="@+id/tv_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/new_color3"
                        android:text="1212121"
                        android:textSize="@dimen/new_font5"/>
                    <ImageView
                        android:id="@+id/iv_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/bg_normal_praise"
                        android:layout_marginLeft="7dp"/>
                </LinearLayout>

            </RelativeLayout>
            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/new_color3"
                android:textSize="@dimen/new_font5"
                android:text="12.15"/>

            <com.news.yazhidao.widget.TextViewExtend
                android:id="@+id/tv_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ssss"
                android:layout_below="@+id/mSelectCommentHeader"
                android:lineSpacingMultiplier="1.15"
                android:textColor="@color/new_color1"
                android:textSize="@dimen/new_font10"/>

        </LinearLayout>

        <View
            android:id="@+id/mSelectCommentDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mSelectCommentHeader"
            android:layout_marginTop="19dp"
            android:background="@color/new_color4"/>
    </RelativeLayout>

</RelativeLayout>