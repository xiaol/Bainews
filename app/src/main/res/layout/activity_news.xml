<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#4fb5ea"
        >

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/tv_title"
            android:layout_width="125dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/app_title2"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_stroke1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_title"
        android:background="#a4a4a5"
        />

    <TextView
        android:id="@+id/tv_stroke2"
        android:layout_below="@+id/tv_stroke1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a4a4a5"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lv_news"
        android:layout_below="@+id/tv_stroke2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3fa"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:listSelector="#f3f3fa"
        ptr:ptrDrawable="@drawable/pull_to_refresh_arrow"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderBackground="#4d94c9"
        ptr:ptrHeaderTextColor="#ffffff"
        ptr:ptrScrollingWhileRefreshingEnabled="false"
        ptr:ptrListViewExtrasEnabled="true"
        />

    <LinearLayout
        android:id="@+id/ll_no_network"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nonetwork"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_time"
        android:background="@drawable/default_ptr_rotate"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />

</RelativeLayout>
